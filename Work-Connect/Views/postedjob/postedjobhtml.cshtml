@model IEnumerable<Work_Connect.Models.postAJob>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Navigation</title>
    <link rel="stylesheet" href="~/css/postedjob.css">


</head>
<body>

    <div class="background-wrapper">
            <div class="dot"></div>
            <p class="text-with-dot">Posted  Jobs</p>
          

            <div class="right-box-container">
                @foreach (var job in Model)
                    {
            <div class="right-box">
                <div class="image-container">
                   
                    <img src="~/images/job.png" alt="Description of the image" style="width: 100%; height: auto; border-radius: 5px;">
                <div class="text-button-container">
                            <h3>@job.JobTitle</h3>
                    <br>
                            <p>@job.CompanyName</p> <!-- Add your text here -->
                    <button class="action-button">Delete</button> <!-- Add your button here -->
                </div>  
            </div>
         </div>
         }
    </div>
    

            </div>

    <script src="commompage.js"></script>

</body>
</html>
