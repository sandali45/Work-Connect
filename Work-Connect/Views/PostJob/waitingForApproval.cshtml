@{
    ViewData["Title"] = "Waiting For Approval";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Submission - Waiting for Approval</title>
    <link rel="stylesheet" href="/css/waitingForApproval.css">
</head>

<body>
    <div class="approval-page-container">
        <div class="approval-content">
            <img src="/images/ApprovalCheckCircle.svg" alt="Job Submitted" class="approval-icon">
            <h1>Your job post is submitted!</h1>
            <p class="approval-message">
                Thank you for submitting your job post. Your job listing is under review and will be published once it's
                approved.
            </p>
            <div class="loading-animation">
                <div class="spinner"></div>
                <p>Waiting for approval...</p>
            </div>
            <p class="info-message">
                You will be notified via email once your job post is approved. This process may take up to 48 hours.
            </p>
            <a href="index.html" class="return-home-btn">Return to Home</a>
        </div>
    </div>
</body>

</html>