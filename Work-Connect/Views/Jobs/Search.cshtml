@model IEnumerable<Work_Connect.Models.postAJob>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Search Results</title>
    <link rel="stylesheet" href="~/css/searchcss.css" />
</head>
<body>
    <div class="container">
        <h2>Job Search Results</h2>

        <form action="/Jobs/Search" method="GET">
            <input type="text" name="searchQuery" placeholder="Search by skills" value="@ViewData["searchQuery"]" />
            <button type="submit">Search</button>
        </form>

        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Company Name</th>
                        <th>Job Title</th>
                        <th>Skills</th>
                        <th>Payment Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.CompanyName</td>
                            <td>@job.JobTitle</td>
                            <td>@job.JobCategory</td>
                            <td>@job.MaxSalary</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No jobs found matching your criteria.</p>
        }
    </div>
    <footer>
        @Html.Partial("footer")
    </footer>
</body>
</html>
