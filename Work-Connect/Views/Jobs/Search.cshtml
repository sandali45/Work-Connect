@model IEnumerable<Work_Connect.Models.Job>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Search Results</title>
    <link rel="stylesheet" href="~/css/searchcss.css" /> 
</head>
<body>
    <div class="container">
        <h2>Job Search Results</h2>

        <form action="/Jobs/Search" method="GET">
            <input type="text" name="searchQuery" placeholder="Search by skills" value="@ViewData["searchQuery"]" />
            <button type="submit">Search</button>
        </form>

        @if (Model.Any())
        {
        <table>
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Job Title</th>
                    <th>Skills</th>
                    <th>Payment Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                    {
                <tr>
                    <td>@job.CompanyName</td>
                    <td>@job.JobTitle</td>
                    <td>@job.Skills</td>
                    <td>@job.PaymentDetails</td>
                </tr>
                    }
            </tbody>
        </table>
        }
        else
        {
        <p>No jobs found matching your criteria.</p>
        }
    </div>
    <footer>
        <div class="footer-content">
            <div class="logo-text">
                <span>work</span> | <span>connect</span>
            </div>
            <ul class="footer-nav">
                <li><a href="home">Home</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Sign In</a></li>
                <li><a href="#">Sign Up</a></li>
                <li><a href="home.cshtml">About Us</a></li>
                <li><a href="#">Jobs</a></li>
   
                <li><a href="contact">Contact Us</a></li>
            </ul>
            <div class="footer-image">
                <img src="~/images/pic.svg" alt="User and Phone Illustration">
            </div>
        </div>
    </footer>
</body>
</html>
