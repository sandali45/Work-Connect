@model IEnumerable<Work_Connect.Models.JobApplication>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Navigation</title>
    <link rel="stylesheet" href="~/css/allapliedjobs.css">
</head>
<body>
    @Html.Partial("Navbarhtml")
    <div class="background-wrapper">
        <div class="header-container">
            <div class="dot"></div>
            <p class="text-with-dot">Applied Jobs</p>
        </div>
        <div class="right-box-container">
            @foreach (var job in Model)
            {
                <div class="right-box">
                    <div class="image-container">
                        <img src="~/images/job.png" alt="@job.JobTitle" class="job-image">
                    </div>
                    <div class="text-button-container">
                        <h3>@job.JobTitle</h3>
                        <p>@job.ApplicantName</p>
                        <form action="@Url.Action("Remove", "allapliedjob", new { id = job.ApplicationId })" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="action-button" onclick="return confirm('Are you sure you want to delete this company?');">Remove</button>
                        </form>
                        
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="commompage.js"></script>
    <footer>
        @Html.Partial("footer")
    </footer>
</body>
</html>