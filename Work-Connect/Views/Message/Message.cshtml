<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Form</title>
    <link rel="stylesheet" href="~/css/Message.css"> <!-- Link to separate CSS -->
</head>
<body>
    @Html.Partial("Navbarhtml")
    <div class="background-wrapper">
        <div class="right-box-container">
            <div class="right-box form-box">
                <div class="text-button-container">
                    <h3>Message Details</h3>
                    <form action="#" method="POST">
                        <div class="form-group">
                            <label for="to">From</label>
                            <input type="email" id="to" name="to" required>
                        </div>

                        <div class="form-group">
                            <label for="from">To:</label>
                            <input type="email" id="from" name="from" required>
                        </div>

                        <div class="form-group">
                            <label for="message">Message:</label>
                            <textarea id="message" name="message" rows="3" required></textarea>
                        </div>

                        <button type="submit" class="action-button"></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="commonpage.js"></script>
    <footer>
        @Html.Partial("footer")
    </footer>
</body>
</html>
