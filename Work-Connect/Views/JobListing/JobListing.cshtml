@model IEnumerable<Work_Connect.Models.Job>

@{
    ViewData["Title"] = "Jobs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/CSS/jobListNew.css">
</head>
<body>
    <div class="top-section">
        <div class="job-list">
            <div class="square"></div>
            Job List
        </div>
    </div>

    <div class="bottom-section">
        <div class="card-container">
            @foreach (var job in Model) 
            {
                <a href="JobDescriptionPage.html?jobId=@job.JobId" class="card-link">
                    <div class="card">
                        <img src="@job.ImgURL" alt="Image" class="card-image">
                        <div class="card-content">
                            <div class="card-title">@job.CompanyName</div>
                            <div class="card-subtitle">@job.Position</div>
                            <div class="card-description">@job.Description</div>
                        </div>
                        <div class="card-footer">
                            <span class="card-button">@job.EmploymentType</span>
                            <span class="card-button">@job.Salary</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</body>
</html>
