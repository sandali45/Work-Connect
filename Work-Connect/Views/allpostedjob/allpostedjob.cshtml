@model IEnumerable<Work_Connect.Models.postAJob>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Navigation</title>
    <link rel="stylesheet" href="~/css/allpostedjob.css">
</head>
<body>
    @Html.Partial("Navbarhtml")
    <div class="background-wrapper">
        <div class="header-container">
            <div class="dot"></div>
            <p class="text-with-dot">Posted Jobs</p>
        </div>
        <div class="right-box-container">
            @if (Model != null && Model.Any())
            {
                foreach (var job in Model)
                {
                    <div class="right-box">
                        <div class="image-container">
                            <img src="~/images/job.png" alt="Description of the image" class="job-image">
                        </div>
                        <div class="text-button-container">
                            <h3>@job.JobTitle</h3>
                            <br />
                            <p>@job.CompanyName</p>
                            <form action="@Url.Action("Delete", "allpostedjob", new { id = job.JobId })" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="action-button delete-job" onclick="return confirm('Are you sure you want to delete this job?');">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No jobs posted yet.</p>
            }
        </div>
    </div>
    <script src="commompage.js"></script>
</body>
</html>
