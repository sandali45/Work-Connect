@model IEnumerable<Work_Connect.Models.postAJob>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Navigation</title>
    <link rel="stylesheet" href="~/css/allpostedjob.css">
</head>
<body>
    <div class="background-wrapper">
        <div class="header-container">
            <div class="dot"></div>
            <p class="text-with-dot">Posted Jobs</p>
        </div>
        <div class="right-box-container">
             @foreach (var job in Model)
            {
                <div class="right-box">
                    <div class="image-container">
                    <img src="~/images/job.png" alt="Description of the image" class="job-image">
                </div>
                <div class="text-button-container">
                        <h3>@job.JobTitle</h3>
                        <br />
                        <p>@job.CompanyName</p>
                        <button class="action-button delete-job">Delete</button>
                </div>
            </div>
            }
        </div>
    </div>
    <script>
        $(document).on('click', '.delete-job', function () {
            var jobId = $(this).closest('.right-box').data('id'); // Get job ID from the data attribute
            if (confirm('Are you sure you want to delete this job?')) { // Confirmation dialog
                $.ajax({
                    url: '@Url.Action("Delete", "allpostedjob")', // URL to delete action
                    type: 'POST',
                    data: { id: jobId }, // Send job ID
                    success: function (result) {
                        if (result.success) {
                            location.reload(); // Reload the page on success
                        } else {
                            alert('Error deleting job.'); // Handle error
                        }
                    },
                    error: function () {
                        alert('Error deleting job.'); // Handle AJAX error
                    }
                });
            }
        });
    </script>
    <script src="commompage.js"></script>
</body>
</html>
