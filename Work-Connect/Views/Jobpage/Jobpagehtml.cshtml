@{
    ViewData["Title"] = "Job page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Jobpages.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    @Html.Partial("Navbarhtml") <!-- Assuming this is a simplified Navbar -->

    <div class="outer-container">
        <div class="container">
            <h1 class="title">Manage Your Jobs</h1>
            <div class="nav-items">
                <div class="color-box">
                    <a href="@Url.Action("JobListing", "JobListing")" class="nav-link">
                        <i class="fas fa-list"></i> Jobs List
                    </a>
                </div>
                <div class="color-box">
                    <a href="@Url.Action("postJob", "PostJob")" class="nav-link">
                        <i class="fas fa-plus-circle"></i> Post A Job
                    </a>
                </div>
                <div class="color-box">
                    <a href="@Url.Action("Managehtml", "Managejob")" class="nav-link">
                        <i class="fas fa-tasks"></i> Manage Jobs
                    </a>
                </div>
                <div class="color-box">
                    <a href="@Url.Action("allapliedjob", "allapliedjob")" class="nav-link">
                        <i class="fas fa-clipboard-list"></i> Applied Jobs
                    </a>
                </div>
            </div>
           
        </div>

    </div>

    <script src="commompage.js"></script>

    <footer>
        @Html.Partial("footer")
    </footer>
</body>

</html>
