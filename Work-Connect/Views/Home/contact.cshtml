@{
    ViewData["Title"] = "contact";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <script src="~/js/contact.js"></script>
    <link rel="stylesheet" href="~/css/contactcss.css" asp-append-version="true">
</head>
<body>
    <header>
        <nav>
            <div class="logo-container">
                <img src="~/images/logo.svg" alt="Work Connect Logo" class="logo">
                <div class="logo-text">work | connect</div>
            </div>
            <ul>
                <li><a href="home">Home</a></li>
                <li><a href="#">Jobs</a></li>
                <li><a href="home">About Us</a></li>
                <li><a href="contact">Contact Us</a></li>
            </ul>
            
        </nav>
    </header>


    <section class="contact-hero">
        <h1>Contact Us</h1>
        <p>We’d love to hear from you. Fill out the form below.</p>
    </section>

    <section class="contact-form-section">
        <form id="contactForm" onsubmit="sendEmail(); return false;">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" placeholder="Enter your name" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" rows="5" placeholder="Your message" required></textarea>
            </div>

            <div class="button-container">
                <button type="submit" class="submit-button">Send Message</button>
            </div>

        </form>
    </section>

    <footer>
        <div class="footer-content">
            <div class="logo-text">
                <span>work</span> | <span>connect</span>
            </div>
            <ul class="footer-nav">
                <li><a href="home">Home</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Sign In</a></li>
                <li><a href="#">Sign Up</a></li>
                <li><a href="home.cshtml">About Us</a></li>
                <li><a href="#">Jobs</a></li>
                <li><a href="contact">Contact Us</a></li>
            </ul>
            <div class="footer-image">
                <img src="~/images/pic.svg" alt="User and Phone Illustration">
            </div>
        </div>
    </footer>
    
</body>
</html>
